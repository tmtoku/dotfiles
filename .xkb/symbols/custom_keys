partial modifier_keys
xkb_symbols "key_remap" {
    replace key <CAPS> { [ Escape, Escape ] };

    replace key <MUHE> { [ Control_L, Control_L ] };
    replace key <HENK> { [ Control_R, Control_R ] };
    modifier_map Control { <MUHE>, <HENK> };

    replace key <HKTG> { [ Alt_R, Alt_R ] };
    modifier_map Mod1 { <HKTG> };
};
